<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.omniwearhaptics.omniwearbtbridge.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/connection_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp" />
        <Button
            android:id="@+id/button_pairing"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:onClick="onPairingButtonClicked"/>
        <Button
            android:id="@+id/button_toggle_log"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:onClick="onToggleLogButtonClicked"/>
    </LinearLayout>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/haptic_device_type" />
        <RadioButton android:id="@+id/radio_cap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cap"
            android:onClick="onRadioButtonClicked"/>
        <RadioButton android:id="@+id/radio_neckband"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/neckband"
            android:onClick="onRadioButtonClicked"/>
    </RadioGroup>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
            <Button
                android:id="@+id/button_front"
                android:layout_height="wrap_content"
                android:layout_width="50dp"
                android:layout_marginStart="150dp"/>
            <Button
                android:id="@+id/button_middle_front"
                android:layout_below="@id/button_front"
                android:layout_height="wrap_content"
                android:layout_width="50dp"
                android:layout_marginStart="150dp"/>
            <Button
                android:id="@+id/button_top"
                android:layout_below="@id/button_middle_front"
                android:layout_height="wrap_content"
                android:layout_width="50dp"
                android:layout_marginStart="150dp"/>
            <Button
                android:id="@+id/button_middle_back"
                android:layout_below="@id/button_top"
                android:layout_height="wrap_content"
                android:layout_width="50dp"
                android:layout_marginStart="150dp"/>
            <Button
                android:id="@+id/button_front_right"
                android:layout_below="@id/button_front"
                android:layout_toEndOf="@id/button_front"
                android:layout_height="wrap_content"
                android:layout_width="50dp"
                />
            <Button
                android:id="@+id/button_right"
                android:layout_below="@id/button_front_right"
                android:layout_toEndOf="@id/button_front_right"
                android:layout_height="wrap_content"
                android:layout_width="50dp"
                />
            <Button
                android:id="@+id/button_middle_right"
                android:layout_below="@id/button_middle_front"
                android:layout_toStartOf="@id/button_right"
                android:layout_height="wrap_content"
                android:layout_width="50dp" />
            <Button
                android:id="@+id/button_back_right"
                android:layout_below="@id/button_right"
                android:layout_toStartOf="@id/button_right"
                android:layout_height="wrap_content"
                android:layout_width="50dp"
                />
            <Button
                android:id="@+id/button_back"
                android:layout_below="@id/button_back_right"
                android:layout_toStartOf="@id/button_back_right"
                android:layout_height="wrap_content"
                android:layout_width="50dp"
                />
            <Button
                android:id="@+id/button_back_left"
                android:layout_below="@id/button_right"
                android:layout_toStartOf="@id/button_back"
                android:layout_height="wrap_content"
                android:layout_width="50dp"
                />
            <Button
                android:id="@+id/button_left"
                android:layout_below="@id/button_front_right"
                android:layout_toStartOf="@id/button_back_left"
                android:layout_height="wrap_content"
                android:layout_width="50dp"
                />
            <Button
                android:id="@+id/button_middle_left"
                android:layout_below="@id/button_middle_front"
                android:layout_toEndOf="@id/button_left"
                android:layout_height="wrap_content"
                android:layout_width="50dp" />
            <Button
                android:id="@+id/button_front_left"
                android:layout_below="@id/button_front"
                android:layout_toEndOf="@id/button_left"
                android:layout_height="wrap_content"
                android:layout_width="50dp"
                />

    </RelativeLayout>
    <ViewAnimator
        android:id="@+id/log_fragment_animator"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1">
            <fragment
                android:name="com.omniwearhaptics.omniwearbtbridge.logger.LogFragment"
                android:id="@+id/log_fragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/log_fragment"/>
    </ViewAnimator>
</LinearLayout>
