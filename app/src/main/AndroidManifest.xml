<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.omniwearhaptics.omniwearbtbridge" >

    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="22" />

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.ACCESS_COURSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <uses-feature
        android:name="android.hardware.bluetooth_le"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.omniwearhaptics.testapp.MainActivity"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name="com.omniwearhaptics.omniwearbtbridge.OmniWearService"
            android:enabled="true"
            android:label="OmniWearService" >
            <intent-filter>
                <action android:name="com.omniwearhaptics.omniwearbtbridge.action.OMNIWEAR_SERVICE" />

                <category android:name="com.omniwearhaptics.omniwearbtbridge.category.OMNIWEAR_SERVICE" />
            </intent-filter>
        </service>
    </application>

</manifest>